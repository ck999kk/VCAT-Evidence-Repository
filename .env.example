# VCAT Evidence Repository - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vcat_evidence_db
DB_USER=vcat_readonly
DB_PASSWORD=vcat_secure_2025!

# Development vs Production
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_TITLE="VCAT Evidence Repository API"
API_VERSION="1.0.0"

# CORS Settings
CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO

# For Render.com deployment:
# 1. Create PostgreSQL database service
# 2. Set DATABASE_URL environment variable
# 3. Update DB_* variables with actual database credentials
# 4. Set ENVIRONMENT=production